<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='rdl'>
    <!-- Inherit the core Web Toolkit stuff.                        -->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name='com.google.gwt.uibinder.UiBinder'/>
    <inherits name="com.google.gwt.resources.Resources" />
    <inherits name="com.google.gwt.i18n.I18N"/>
    <inherits name="org.gwtbootstrap3.GwtBootstrap3"/>
	<inherits name="org.gwtbootstrap3.extras.summernote.Summernote"/>
	<inherits name="org.hibernate.validator.HibernateValidator" />
	<replace-with class="com.therdl.shared.validation.ValidatorFactory">
		<when-type-is class="javax.validation.ValidatorFactory" />
	</replace-with>

    <!--inherits name='com.google.gwt.user.theme.chrome.Chrome'/-->

    <!-- Other module inherits -->
    <inherits name='com.google.web.bindery.requestfactory.RequestFactory'/>
    <inherits name="com.google.gwt.activity.Activity"/>
    <inherits name="com.google.gwt.place.Place"/>
    <inherits name='com.google.gwt.editor.Editor'/>
    <inherits name='com.google.gwt.user.User' />
    <inherits name='com.google.gwt.user.theme.standard.Standard' />
    <inherits name="com.google.gwt.user.UserAgent" />
    <inherits name="com.google.web.bindery.autobean.AutoBean"/>
    <inherits name='com.google.gwt.http.HTTP'/>
    <inherits name='com.google.gwt.json.JSON'/>
    <inherits name="com.google.common.collect.Collect"/>

    <inherits name="com.google.gwt.logging.Logging"/>
    <set-property name="gwt.logging.enabled" value="FALSE"/>
    <set-property name="gwt.logging.logLevel" value="ALL"/>
	<!-- Specified through pom.xml profiles -->
    <set-property name="gwt.logging.systemHandler" value="${logging.enabled}"/>
    <set-property name="gwt.logging.developmentModeHandler" value="${logging.enabled}"/>
    <set-property name="gwt.logging.consoleHandler" value="${logging.enabled}"/>
    <stylesheet src='../rdl.css' />

    <entry-point class='com.therdl.client.RDL'/>

    <!-- firefox  chrome  ie8  -->
    <set-property name="user.agent" value="gecko1_8, safari, ie8"/>

    <source path='client'/>
    <source path='shared'/>

</module>
