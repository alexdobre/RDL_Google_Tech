<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:summer="urn:import:org.gwtbootstrap3.extras.summernote.client.ui"
             xmlns:rdl='urn:import:com.therdl.client.view.widget'>
	<ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>
	<ui:with field="res" type="com.therdl.client.view.cssbundles.Resources"/>

	<b:Container addStyleNames="push">
		<g:SimplePanel ui:field="appMenuPanel"/>

		<b:PanelGroup b:id="accordion">
			<b:Panel>
				<b:PanelHeader>
					<b:Heading size="H4">
						<b:Anchor dataToggle="COLLAPSE" dataParent="#accordion" dataTarget="#collapseOne"
						          text="Collapse Group #1"/>
					</b:Heading>
				</b:PanelHeader>
				<b:PanelCollapse b:id="collapseOne" in="true">
					<b:PanelBody>
						<b.html:Paragraph>
							I am the content of Collapse Group #1.
						</b.html:Paragraph>
					</b:PanelBody>
				</b:PanelCollapse>
			</b:Panel>
			<b:Panel>
				<b:PanelHeader>
					<b:Heading size="H4">
						<b:Anchor dataToggle="COLLAPSE" dataParent="#accordion" dataTarget="#collapseTwo"
						          text="Collapse Group #2"/>
					</b:Heading>
				</b:PanelHeader>
				<b:PanelCollapse b:id="collapseTwo">
					<b:PanelBody>
						<b.html:Paragraph>
							I am the content of Collapse Group #1.
						</b.html:Paragraph>
					</b:PanelBody>
				</b:PanelCollapse>
			</b:Panel>
			<b:Panel>
				<b:PanelHeader>
					<b:Heading size="H4">
						<b:Anchor icon="ANCHOR" dataToggle="COLLAPSE" dataParent="#accordion"
						          dataTarget="#collapseThree" text="Collapse Group #3"/>
					</b:Heading>
				</b:PanelHeader>
				<b:PanelCollapse b:id="collapseThree">
					<b:PanelBody>
						<b.html:Paragraph>
							I am the content of Collapse Group #1.
						</b.html:Paragraph>
					</b:PanelBody>
				</b:PanelCollapse>
			</b:Panel>
		</b:PanelGroup>
	</b:Container>

</ui:UiBinder>