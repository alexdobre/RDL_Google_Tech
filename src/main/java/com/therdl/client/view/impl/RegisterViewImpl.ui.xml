<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>

	<b:Container addStyleNames="push">
		<g:SimplePanel ui:field="appMenuPanel"/>
		<b:Form type="HORIZONTAL">
			<b:FieldSet>
				<b:Legend text="{i18n.enterUserDetails}"/>
				<b:FormGroup>
					<b:FormLabel addStyleNames="col-lg-2" text="{i18n.userName}"/>
					<g:FlowPanel addStyleNames="col-lg-4">
						<b:TextBox ui:field="userName"/>
					</g:FlowPanel>
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel addStyleNames="col-lg-2" text="{i18n.email}"/>
					<g:FlowPanel addStyleNames="col-lg-4">
						<b:TextBox ui:field="email"/>
					</g:FlowPanel>
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel addStyleNames="col-lg-2" text="{i18n.password}"/>
					<g:FlowPanel addStyleNames="col-lg-4">
						<b:Input type="PASSWORD" ui:field="psswd"/>
					</g:FlowPanel>
				</b:FormGroup>
				<b:FormGroup>
					<b:FormLabel addStyleNames="col-lg-2" text="{i18n.confirmPassword}"/>
					<g:FlowPanel addStyleNames="col-lg-4">
						<b:Input type="PASSWORD" ui:field="cpsswd"/>
					</g:FlowPanel>
				</b:FormGroup>
				<b:FormGroup>
					<g:FlowPanel addStyleNames="col-lg-4 col-lg-offset-2">
						<b:Button ui:field="submitBtn" type="DEFAULT" text="{i18n.submit}"/>
					</g:FlowPanel>
				</b:FormGroup>
			</b:FieldSet>
		</b:Form>
	</b:Container>

</ui:UiBinder>