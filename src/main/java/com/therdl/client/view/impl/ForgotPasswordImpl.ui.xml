<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
    <ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>
    <ui:style>

        .container {

        }

        .labelText  {
            font-family: Arial, Sans-serif;
            font-size: 14px;
            margin:12px;
        }

        .loginBox {
            border: 1px solid #AACCEE;
            display:inline-block;
            font-size:10px;
            padding: 3px;
            width: 160px;
            margin:10px;
        }

        .validate {
            font-family: Arial, Sans-serif;
            color:red;
            font-size:12px;
        }
    </ui:style>
    <g:VerticalPanel styleName = '{style.container}'>
        <g:Label text = "{i18n.forgotPassword}" horizontalAlignment="center" styleName = '{style.labelText}' />
        <g:HorizontalPanel verticalAlignment = "middle">
            <b:TextBox ui:field = "txtBoxEmail" placeholder="{i18n.email}" styleName = '{style.loginBox}'></b:TextBox>
            <b:Button ui:field = "btnSubmit" text = "{i18n.submit}"  />
        </g:HorizontalPanel>
        <g:Label ui:field = "lblEmailNotFound" horizontalAlignment="center" styleName ='{style.validate}'  />
        <b:Modal ui:field="modalSuccessResetPassword" title="{i18n.forgotPassword}" backdrop="STATIC">
            <g:Label text="{i18n.newPasswordSentToEmail}"/>
        </b:Modal>
        <b:Modal ui:field="modalFailResetPassword" title="{i18n.forgotPassword}" backdrop="STATIC">
            <g:Label text="{i18n.errorResetPassword}"/>
        </b:Modal>
    </g:VerticalPanel>


</ui:UiBinder>