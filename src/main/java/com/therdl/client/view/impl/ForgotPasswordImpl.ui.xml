<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>
	<ui:style>
		.validate {
		font-family: Arial, Sans-serif;
		color: red;
		font-size: 12px;
		}
	</ui:style>
	<b:Container>
		<b:Modal title="{i18n.forgotPassword}" closable="true" fade="true" dataBackdrop="STATIC" dataKeyboard="true"
		         b:id="forgotPassModal" ui:field="forgotPassModal">
			<b:ModalBody>
				<b:Row>
					<b:Column size="MD_6">
						<b:TextBox ui:field="txtBoxEmail" placeholder="{i18n.email}"/>
					</b:Column>
					<b:Column size="MD_6">
						<b:Button ui:field="btnSubmit" text="{i18n.submit}"/>
					</b:Column>
				</b:Row>
				<g:Label ui:field="lblEmailNotFound" horizontalAlignment="center" styleName='{style.validate}'/>
				<b:Modal ui:field="modalSuccessResetPassword" title="{i18n.forgotPassword}">
					<g:Label text="{i18n.newPasswordSentToEmail}"/>
				</b:Modal>
				<b:Modal ui:field="modalFailResetPassword" title="{i18n.forgotPassword}">
					<g:Label text="{i18n.errorResetPassword}"/>
				</b:Modal>
			</b:ModalBody>
		</b:Modal>
	</b:Container>


</ui:UiBinder>