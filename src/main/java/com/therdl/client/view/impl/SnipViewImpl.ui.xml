<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:rdl="urn:import:com.therdl.client.view.widget"
        >
    <ui:with field="res" type="com.therdl.client.view.cssbundles.Resources"/>
    <ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>

    <ui:style>
        .snipViewCont {
            width:60%;
            margin:20px;
            text-align: left;
        }

        .richTextArea {
            width: 100%;
            height: 300px;
            margin-top: 3px;
        }

        .refButtonsCont {
            width: 100%;
            height: 40px;
            border-top: 1px solid #000;
            padding-top: 5px;
            padding-left: 10px;
        }

        .refButtonsContTop {
            width: 100%;
            height: 40px;
            border: 1px solid #000;
            padding-top: 5px;
            padding-left: 10px;
        }

        .referenceCont {
            display: none;
            border: 1px solid #000;
            margin-top: 4px;
            padding: 1px;
        }

        .radioBtnParent {
            margin: 3px;
        }

        .radioBtn {
            margin-left: 13px;
        }

        .radioBtn label, .checkBoxBtn label {
            margin-left: 3px;
            margin-bottom: 0px;
        }

        @external .checkBoxBtn;
        .checkBoxBtn {
            margin-left: 13px;
        }

        .checkboxBtnParent {
            position: absolute;
            right: 0;
        }

        .referenceListCont {
            margin-top: 8px;
        }

        .bottomCont {
            position: relative;
        }

        .repBtn {
            float:right;
            margin-right: 3px;
            margin-top: -3px;
        }

    </ui:style>


    <g:HTMLPanel ui:field="rootPanel">
        <rdl:AppMenu ui:field="appMenu"/>
        <center>
            <g:FlowPanel styleName="{style.snipViewCont}">
                <g:FlowPanel ui:field="snipViewCont"></g:FlowPanel>
                <g:RichTextArea ui:field="richTextArea" styleName="{style.richTextArea}"></g:RichTextArea>
                <g:FlowPanel styleName="{style.refButtonsContTop}">
                    <g:Button ui:field="showRef" text="{i18n.showReferences}"/>
                    <g:Button ui:field="leaveRef" text="{i18n.leaveReference}"/>

                    <g:Image ui:field="repBtn" styleName="{style.repBtn}" url='{res.plusBtn.getSafeUri.asString}' width="35px" height="35px"/>
                </g:FlowPanel>

                <g:FlowPanel ui:field="referenceCont" styleName="{style.referenceCont}">
                    <g:FlowPanel styleName="{style.radioBtnParent}" ui:field="radioBtnParent">
                        <g:RadioButton name="refFlag" styleName="{style.radioBtn}" checked="true" ui:field="rb1" text="{i18n.positive}"></g:RadioButton>
                        <g:RadioButton name="refFlag" styleName="{style.radioBtn}" ui:field="rb2" text="{i18n.neutral}"></g:RadioButton>
                        <g:RadioButton name="refFlag" styleName="{style.radioBtn}" ui:field="rb3" text="{i18n.negative}"></g:RadioButton>
                    </g:FlowPanel>

                    <rdl:EditorWidget ui:field="editorWidget"></rdl:EditorWidget>
                    <g:FlowPanel styleName="{style.refButtonsCont}">
                        <g:Button ui:field="saveRef" text="{i18n.saveReference}"/>
                        <g:Button ui:field="closeRef" text="{i18n.close}"/>
                    </g:FlowPanel>
                </g:FlowPanel>

                <g:FlowPanel ui:field="bottomCont" styleName="{style.bottomCont}">
                    <g:FlowPanel styleName="{style.checkboxBtnParent}" ui:field="checkboxBtnParent">

                    </g:FlowPanel>

                    <g:FlowPanel ui:field="referenceListCont" styleName="{style.referenceListCont}">

                    </g:FlowPanel>
                </g:FlowPanel>
            </g:FlowPanel>
        </center>
    </g:HTMLPanel>
</ui:UiBinder>