<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">
        <ui:style>

            .container {

            }

            .labelText  {
            font-family: Arial, Sans-serif;
            display:inline-block;
            font-size: 14px;
            text-align: left;
            margin:10px;
            }


            .loginBox {
            border: 1px solid #AACCEE;
            display:inline-block;
            font-size:10px;
            padding: 3px;
            width: 160px;
            margin:10px;
            }

            .pswwdBox {
            border: 1px solid #AACCEE;
            display:inline-block;
            font-size:12px;
            padding: 3px;
            width: 80px;
            margin:10px;
            }


            .submitPanel {
            display:block;
            width:420px !important;
            height:60px !important;



            }


            .submit {
            position:absolute;
            border: 1px solid #AACCEE;
            display:inline-block;
            font-size:11px;
            padding: 3px;
            width: 70px;
            margin:10px;
            }

            .validate {

            position:absolute;
            width:320px!important;
            height:18px!important;
            left:110px!important;
            display:inline-block;
            color:red;
            margin-top:10px!important;
            font-size:10px;


            }

                
        </ui:style>
        <g:VerticalPanel styleName = '{style.container}'>
            <g:Label text = "Please Login" styleName = '{style.labelText}' />
            <g:HorizontalPanel verticalAlignment = "middle">
                <g:TextBox ui:field = "email" styleName = '{style.loginBox}'></g:TextBox>
                <g:Label  styleName = '{style.labelText}'>Password</g:Label>
                <g:PasswordTextBox ui:field = "password" styleName = '{style.pswwdBox}'></g:PasswordTextBox>
            </g:HorizontalPanel>
            <g:HTMLPanel   styleName = '{style.submitPanel}' >
            <g:Button ui:field = "submit" text = "Submit" styleName ='{style.submit}' > </g:Button>
            <g:Label ui:field = "loginFail" text = "Login fails please check details" styleName ='{style.validate}'  />
            </g:HTMLPanel>
        </g:VerticalPanel>
</ui:UiBinder> 