<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>
	<ui:style>

		.push {
		padding-top: 55px;
		}

		.labelText {
		font-family: Arial, Sans-serif;
		display: inline-block;
		font-size: 14px;
		text-align: left;
		margin: 10px;
		}

		.loginBox {
		border: 1px solid #AACCEE;
		display: inline-block;
		padding: 3px;
		width: 160px;
		margin: 10px;
		}

		.pswwdBox {
		border: 1px solid #AACCEE;
		display: inline-block;
		font-size: 12px;
		padding: 3px;
		width: 80px;
		margin: 10px;
		}

		.signUpLink {
		padding-left: 260px;
		cursor: pointer;
		}

		.forgotPasswordLink {
		cursor: pointer;
		}

		.validate {

		position: absolute;
		width: 320px !important;
		height: 18px !important;
		left: 110px !important;
		display: inline-block;
		color: red;
		margin-top: 10px !important;
		font-size: 10px;

		}


	</ui:style>
	<g:VerticalPanel styleName='{style.push}'>
		<g:Label text="{i18n.pleaseLogin}" styleName='{style.labelText}'/>
		<g:HorizontalPanel verticalAlignment="middle">
			<b:TextBox ui:field="email" styleName='{style.loginBox}'/>
			<b:Label styleName='{style.labelText}' text="{i18n.password}"/>
			<g:PasswordTextBox ui:field="password" styleName='{style.pswwdBox}'></g:PasswordTextBox>
		</g:HorizontalPanel>
		<g:HorizontalPanel verticalAlignment="middle">
			<b:Label styleName='{style.labelText}' text="{i18n.rememberMe}"/>
			<g:CheckBox ui:field="rememberMe"></g:CheckBox>
		</g:HorizontalPanel>
		<g:HorizontalPanel verticalAlignment="middle">
			<b:Button ui:field="submit" text="{i18n.submit}"/>
			<b:Label ui:field="loginFail" text="{i18n.loginFailMsg}" styleName='{style.validate}'/>
			<b:Anchor ui:field="signUpLink" text="{i18n.signUp}" styleName="{style.signUpLink}"/>
		</g:HorizontalPanel>
		<g:HorizontalPanel horizontalAlignment="left">
			<b:Anchor ui:field="forgotPassLink" text="{i18n.forgotPassword}" styleName="{style.forgotPasswordLink}"/>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 