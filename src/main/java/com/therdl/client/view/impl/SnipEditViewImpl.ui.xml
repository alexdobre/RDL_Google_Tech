<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
		xmlns:ui="urn:ui:com.google.gwt.uibinder"
		xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
		xmlns:rdl='urn:import:com.therdl.client.view.widget'>

	<ui:with field="res" type="com.therdl.client.view.cssbundles.Resources"/>
	<ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>
	<ui:style>

		.push {
		padding-top: 60px;
		}

		.noMargin{
		margin-bottom: 0px;
		}

	</ui:style>
	<g:ScrollPanel>
		<b:Container>
			<rdl:AppMenu ui:field="appMenu"/>

			<b:Form type="HORIZONTAL" addStyleNames="{style.push}">
				<b:FieldSet>
					<b:Panel>
						<b:PanelHeader>
							<g:FlowPanel ui:field="snipTypeBar"/>
							<b:FormGroup ui:field="categoryFormGroup" addStyleNames="{style.noMargin}">
								<b:FormLabel for="formTitle" addStyleNames="col-lg-1" text="{i18n.title}:"/>
								<g:FlowPanel addStyleNames="col-lg-6">
									<b:TextBox b:id="formTitle" ui:field="title" tabIndex="1"/>
								</g:FlowPanel>
								<b:FormLabel for="formCategList" addStyleNames="col-lg-1" text="{i18n.category}:"/>
								<g:FlowPanel addStyleNames="col-lg-2">
									<b:ListBox b:id="formCategList" ui:field="categoryList" tabIndex="2"/>
								</g:FlowPanel>
							</b:FormGroup>

							<b:FormGroup ui:field="proposalFormGroup" addStyleNames="{style.noMargin}">
								<b:FormLabel for="formPropTypeList" addStyleNames="col-lg-2" text="{i18n.type}:"/>
								<g:FlowPanel addStyleNames="col-lg-3">
									<b:ListBox b:id="formPropTypeList" ui:field="proposalTypeList"/>
								</g:FlowPanel>

								<b:FormLabel for="formStateList" addStyleNames="col-lg-2" text="{i18n.state}:"/>
								<g:FlowPanel addStyleNames="col-lg-3">
									<b:ListBox b:id="formStateList" ui:field="proposalStateList"/>
								</g:FlowPanel>
							</b:FormGroup>
						</b:PanelHeader>
						<b:PanelBody>
							<rdl:EditorWidget ui:field="editorWidget"></rdl:EditorWidget>
						</b:PanelBody>
						<b:PanelFooter>
							<b:Button ui:field="saveSnip" text="{i18n.save}"/>
							<b:Button ui:field="deleteSnip" text="{i18n.delete}"/>
						</b:PanelFooter>
					</b:Panel>
				</b:FieldSet>
			</b:Form>
		</b:Container>
	</g:ScrollPanel>

</ui:UiBinder> 