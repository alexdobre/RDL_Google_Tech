<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:rdl='urn:import:com.therdl.client.view.widget'>
	<ui:style>

        .mainPanel {
        position:relative;
        width:100%;
        height:60%;
        overflow:inherit;
        }

        .outerPanel {
        position:relative;
        width:100%;
        height:90%;
       }


	</ui:style>
	<g:HTMLPanel styleName="{style.outerPanel}" >
        <rdl:AppMenu ui:field="appMenu" />

        <g:DockLayoutPanel  ui:field="snipEditDocPanel" unit='EM'>
            <g:center>
                <g:FlowPanel ui:field='mainPanel' styleName="{style.mainPanel}"/>
            </g:center>
        </g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 