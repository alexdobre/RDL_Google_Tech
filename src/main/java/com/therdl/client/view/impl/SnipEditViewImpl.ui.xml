<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
        xmlns:rdl='urn:import:com.therdl.client.view.widget'>

    <ui:with field="res" type="com.therdl.client.view.cssbundles.Resources"/>
    <ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>
    <ui:style>

        .mainPanel {
            width: 900px;
            margin-top: 20px;
        }

        .snipTypeBar {
            width: 100%;
            border: 1px solid #000;
        }

        .categoryBar, .titleBar {
            width: 100%;
            border: 1px solid #000;
            margin-top: 2px;
            height: 40px;
            text-align: left;
        }

        .titleBar {
            padding-top: 5px;
        }

        .editorContainer {
            margin-top: 2px;
            border: 1px solid #000;
            padding: 2px;
        }

        .editorBtnContainer {
            margin-top: 2px;
            border: 1px solid #000;
            height: 40px;
            padding-top: 5px;
            text-align: left;
            padding-left: 20px;
        }

        @external .radioBtn;
        .radioBtn {
            margin-left: 10px;
            display: inline-block;
        }

        .radioBtn label {
            margin-left: 3px;
            margin-bottom: 0px;
            display: inline-block;
        }

        @external .snipTypeImg;
        .snipTypeImg {
            margin-left: 70px;
            display: inline-block;
        }

        .labelText {
            font-family: Arial, Sans-serif;
            display: inline-block;
            font-size: 13px;
            text-align: left;
            font-weight: bold;
            margin-left: 20px;
            margin-right: 20px;
        }

        .categoryField {
            width: 160px;
            margin: 5px;
        }

        .tagTextBox {
            width: 250px;
            margin-top: 5px;
        }

        .titleTextBox {
            width: 400px;
        }

    </ui:style>
    <g:HTMLPanel>
        <rdl:AppMenu ui:field="appMenu"/>

        <center>
            <g:FlowPanel ui:field='mainPanel' styleName="{style.mainPanel}">
                <g:FlowPanel ui:field="snipTypeBar" styleName="{style.snipTypeBar}"/>
                <g:FlowPanel ui:field="categoryBar" styleName="{style.categoryBar}">
                    <b:Label ui:field="categoryLabel" text="{i18n.category}:" styleName='{style.labelText}'/>
                    <g:ListBox ui:field="categoryList" styleName='{style.categoryField}'/>

                    <b:Label ui:field="proposalTypeLabel" text="{i18n.type}:" styleName='{style.labelText}'/>
                    <g:ListBox ui:field="proposalTypeList" styleName='{style.categoryField}'/>

                    <b:Label ui:field="proposalStateLabel" text="{i18n.state}:" styleName='{style.labelText}'/>
                    <g:ListBox ui:field="proposalStateList" styleName='{style.categoryField}'/>

                    <b:Label text="{i18n.tag}:" styleName='{style.labelText}'/>
                    <b:TextBox ui:field="tag" styleName="{style.tagTextBox}"/>
                </g:FlowPanel>

                <g:FlowPanel ui:field="titleBar" styleName="{style.titleBar}">
                    <b:Label text="{i18n.title}:" styleName='{style.labelText}'/>
                    <b:TextBox ui:field="title" styleName="{style.titleTextBox}" tabIndex="1"/>
                </g:FlowPanel>

                <g:FlowPanel ui:field="editorContainer" styleName="{style.editorContainer}">
                    <rdl:EditorWidget ui:field="editorWidget"></rdl:EditorWidget>
                </g:FlowPanel>

                <g:FlowPanel ui:field="editorBtnContainer" styleName="{style.editorBtnContainer}">
                    <b:Button ui:field="saveSnip" text="{i18n.save}"/>
                    <b:Button ui:field="deleteSnip" text="{i18n.delete}"/>
                </g:FlowPanel>
            </g:FlowPanel>
        </center>
    </g:HTMLPanel>
</ui:UiBinder> 