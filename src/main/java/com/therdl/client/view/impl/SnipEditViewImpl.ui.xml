<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:rdl='urn:import:com.therdl.client.view.widget'>
	<ui:style>

        .mainPanel {
        position:relative;
        width:100%;
        height:60%;
        overflow:inherit;
        }

        .outerPanel {
        position:relative;
        width:100%;
        height:90%;
       }


	</ui:style>
	<g:HTMLPanel styleName="{style.outerPanel}" >
        <g:HTMLPanel ui:field="appMenu"  ></g:HTMLPanel>

		<g:DockPanel>
			<g:Dock direction="WEST">
				<g:SimplePanel>
					<rdl:LeftMenuTree ui:field="leftMenuTree" />
				</g:SimplePanel>
			</g:Dock>
			<g:Dock direction="CENTER">
				<g:FlowPanel ui:field='mainPanel' styleName="{style.mainPanel}">
					<!--rdl:SnipEditorWorkflow ui:field="snipEditorWorkflow" width="100%" /-->
				</g:FlowPanel>
			</g:Dock>
		</g:DockPanel>
	</g:HTMLPanel>
</ui:UiBinder> 