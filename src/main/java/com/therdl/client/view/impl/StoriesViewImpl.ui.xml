<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:rdl='urn:import:com.therdl.client.view.widget'>
    <ui:style src="../cssbundles/searchView.css"/>

	<g:HTMLPanel>
		<b:FluidContainer>
			<rdl:AppMenu ui:field="appMenu"/>
			<b:Row>
					<b:Column size="MD_2">
						<b:FluidContainer ui:field="threadSearchWidgetPanel"/>
						<rdl:SocialPanel styleName="{style.socialPanel}"/>
					</b:Column>
					<b:Column size="MD_10">
						<rdl:LoadingWidget ui:field="threadLoadingWidget"
						                   styleName="{style.snipListRowContainer}"></rdl:LoadingWidget>
						<g:FlowPanel ui:field="threadListRowContainer" styleName='{style.snipListRowContainer}'/>
					</b:Column>
			</b:Row>
		</b:FluidContainer>
    </g:HTMLPanel>
</ui:UiBinder>