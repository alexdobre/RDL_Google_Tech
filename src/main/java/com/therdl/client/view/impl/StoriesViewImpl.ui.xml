<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:rdl='urn:import:com.therdl.client.view.widget'>
	<ui:style src="../cssbundles/searchView.css"/>

	<g:ScrollPanel>
		<b:Container>
			<rdl:AppMenu ui:field="appMenu"/>

			<g:SimplePanel addStyleNames="push">

				<b:Row>
					<b:Column size="MD_3">
						<g:FlowPanel ui:field="threadSearchWidgetPanel"/>
						<rdl:SocialPanel styleName="{style.socialPanel}"/>
					</b:Column>
					<b:Column size="MD_9">
						<rdl:LoadingWidget ui:field="threadLoadingWidget"/>
						<g:FlowPanel ui:field="threadListRowContainer"/>
					</b:Column>
				</b:Row>

			</g:SimplePanel>

		</b:Container>
	</g:ScrollPanel>

</ui:UiBinder>