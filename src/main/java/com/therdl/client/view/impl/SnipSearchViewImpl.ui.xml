<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:rdl='urn:import:com.therdl.client.view.widget'>
	<ui:style>

    .widgetlayout {
        margin-top:30px;
    }
    .searchlayout {
        margin:30px 0 0 20px;
    }

    .socialPanel {
        margin-top:70px;
        margin-left: 10px;

    }
	</ui:style>

	<g:HTMLPanel  >
        <rdl:AppMenu ui:field="appMenu"/>
        <rdl:IdeasMenu></rdl:IdeasMenu>
        <g:DockLayoutPanel  ui:field="snipSearchDocPanel" unit='EM' >
            <g:west size='25'>
                <g:VerticalPanel>
                    <g:FlowPanel ui:field="snipSearchWidgetPanel" styleName = '{style.searchlayout}'/>
                    <rdl:SocialPanel ui:field="socialPanel" styleName="{style.socialPanel}"/>
                </g:VerticalPanel>
            </g:west>
            <g:east size='75'>
                <g:FlowPanel  ui:field="snipListRow" width="100%" height="100%" styleName = '{style.widgetlayout}'/>
            </g:east>
        </g:DockLayoutPanel>

	</g:HTMLPanel>
</ui:UiBinder> 