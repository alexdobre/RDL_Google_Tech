<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:rdl='urn:import:com.therdl.client.view.widget'>
	<ui:style>

    .mainContainer {
        margin-top: 10px;
    }

    .snipListRowContainer {
        width: 70%;
        float: left;
        margin-left: 10px;
    }

    .leftPanel {
        float:left;
        width: 28%;
    }
    .searchlayout {

    }

    .socialPanel {
        margin-top:10px;
        margin-left: 50px;

    }
	</ui:style>

	<g:HTMLPanel>
        <rdl:AppMenu ui:field="appMenu"/>
        <center>
            <div style="width:1124px;">
                <rdl:IdeasMenu></rdl:IdeasMenu>
                <g:FlowPanel styleName="{style.mainContainer}">
                    <g:FlowPanel styleName="{style.leftPanel}">
                        <g:FlowPanel ui:field="snipSearchWidgetPanel" styleName = '{style.searchlayout}'/>
                        <rdl:SocialPanel ui:field="socialPanel" styleName="{style.socialPanel}"/>
                    </g:FlowPanel>
                    <rdl:LoadingWidget ui:field="loadingWidget" styleName="{style.snipListRowContainer}"></rdl:LoadingWidget>
                    <g:FlowPanel ui:field="snipListRowContainer" styleName = '{style.snipListRowContainer}'/>
                </g:FlowPanel>
            </div>
        </center>
	</g:HTMLPanel>
</ui:UiBinder> 