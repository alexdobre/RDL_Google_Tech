<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:rdl='urn:import:com.therdl.client.view.widget'>
	<ui:style>
        .widgetlayout {
          margin:10px 0 0 20px;
          padding:10px 0 0 20px;
        }
        .searchlayout {
        margin:20px;
        padding:20px;
        }
	</ui:style>

	<g:HTMLPanel  >
        <rdl:AppMenu ui:field="appMenu"/>

        <g:DockPanel >

			<g:Dock direction="NORTH" size='285px'>
				<g:FlowPanel styleName='{style.searchlayout}'>
					<rdl:SnipSearchWidget ui:field="snipSearchWidget" width="100%" height="100%"  />
				</g:FlowPanel>
			</g:Dock>
			<g:Dock direction="CENTER"  >
				<g:FlowPanel  ui:field="snipListRow" styleName='{style.widgetlayout}' width="100%" height="100%" >
				</g:FlowPanel>
			</g:Dock>
		</g:DockPanel>

	</g:HTMLPanel>
</ui:UiBinder> 