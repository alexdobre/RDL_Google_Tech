<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>

	<b:Container addStyleNames="push">
		<g:SimplePanel ui:field="appMenuPanel"/>
		<b:Row>
			<b:Column size="MD_4">
				<g:FocusPanel ui:field="profileImagePanel">
					<b:BlockQuote addStyleNames="noBorder">
						<b.html:Paragraph>
							<b:Image type="THUMBNAIL"  ui:field="avatarImage"/>
						</b.html:Paragraph>
						<b.html:Paragraph text="{i18n.avatarImgAlt}"/>
						<b.html:Paragraph text="{i18n.clickToUpload}"/>
					</b:BlockQuote>
				</g:FocusPanel>
			</b:Column>
			<b:Column size="MD_8">
				<b:Form>
					<b:FieldSet>
						<b:Legend text="{i18n.yourProfile}"/>
						<b:FormGroup>
							<b:FormLabel for="formEmail" text="{i18n.email}"/>
							<b:FormStatic b:id="formEmail" ui:field="email"/>
						</b:FormGroup>
						<b:FormGroup>
							<b:FormLabel for="formUsername" text="{i18n.userName}"/>
							<b:FormStatic b:id="formUsername" ui:field="username"/>
						</b:FormGroup>
						<b:Button text="{i18n.changePassword}" ui:field="changePassBtn"/>
					</b:FieldSet>
				</b:Form>
			</b:Column>
		</b:Row>
		<b:Row>
			<b:Column size="MD_12">
				<g:HTMLPanel ui:field="titlePanel"></g:HTMLPanel>
				<g:Anchor ui:field="ancBeAMember" text="Be a Member!" href="/rdl/paypalCheckout"/>
			</b:Column>
		</b:Row>
	</b:Container>

</ui:UiBinder>