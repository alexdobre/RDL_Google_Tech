<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:rdl="urn:import:com.therdl.client.view.widget">

    <ui:style>

        .outer {
        position:relative;
        display:block;
        width: 100%;
        height:100%;
        margin: 0 auto;


        }

        .headerText {
         font-size:14px;
         margin:20px;

        }




    </ui:style>
    <g:HTMLPanel addStyleNames="{style.outer}">
        <rdl:AppMenu ui:field="appMenu" />

                <g:HTMLPanel ui:field = "profileImagePanel" >
                    <span  class="{style.headerText}">This is place holder for image</span>
                </g:HTMLPanel>

                <g:HTMLPanel ui:field = "profileUpLoadFormPanel"  >
                    <g:FormPanel  ui:field = "uploadForm" />
                </g:HTMLPanel>

    </g:HTMLPanel>
</ui:UiBinder>