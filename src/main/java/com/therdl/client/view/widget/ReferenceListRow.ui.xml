<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="com.therdl.client.view.cssbundles.Resources"/>

    <ui:style>
        .leftPanel {
            width: 60px;
            margin-left:10px;

        }

        .rightPanel {
            border-left: 1px solid #000;
            position: relative;
        }

       .rootPanel {
            margin-top: 10px;
            border: 1px solid #000;
        }

        .horizontalPanel {
            width: 100%;
        }

        .richTextArea {
            width: 100%;
            height: 300px;
        }

        .userImg {
            width: 94px;
            margin: 3px 0px 0px 3px
        }

        .label {
            padding-left:3px;
            width: 130px;
        }

        .badgePanel {
            margin: 3px 0px 3px 0px;
            width: 90px;
        }

        .refFlag {
            height: 30px;
            width: 65px;
            border: 1px solid #000;
            position: absolute;
            right: 0;
            padding-left: 6px;
            padding-top: 3px;
            color: #fff;
        }

        .refRepBtn {
            position: absolute;
            right: 0;
            bottom:0;
            margin-bottom:3px;
        }

    </ui:style>
    <g:HTMLPanel styleName="{style.rootPanel}">
        <g:HorizontalPanel styleName="{style.horizontalPanel}">
            <g:FlowPanel ui:field="leftPanel" styleName="{style.leftPanel}">
                <g:Image url='{res.avatarImage.getSafeUri.asString}' styleName="{style.userImg}"></g:Image>
                <g:Label ui:field="rep" styleName="{style.label}"></g:Label>

                <g:Label ui:field="titleLabel" styleName="{style.label}"></g:Label>
                <g:Label ui:field="userName" styleName="{style.label}"></g:Label>

                <g:FlowPanel ui:field="badgePanel" styleName="{style.badgePanel}">

                </g:FlowPanel>

                <g:Label ui:field="creationDate" styleName="{style.label}"></g:Label>
            </g:FlowPanel>
            <g:FlowPanel ui:field="rightPanel" styleName="{style.rightPanel}">
                <g:Label ui:field="refFlag" styleName="{style.refFlag}"></g:Label>
                <g:Image ui:field="refRepBtn" styleName="{style.refRepBtn}" url='{res.plusBtn.getSafeUri.asString}' width="35px" height="35px"/>
                <g:RichTextArea ui:field="richTextAreaRef" styleName="{style.richTextArea}"></g:RichTextArea>
            </g:FlowPanel>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>