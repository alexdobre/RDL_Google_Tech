<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with field="res" type="com.therdl.client.view.cssbundles.Resources"/>

	<ui:style>
		.leftPanel {
		width: 60px;
		margin-left: 10px;

		}

		.rightPanel {
		border: 0;
		position: relative;
		}

		.richTextArea {
		width: 100%;
		padding-top: 5px;
		padding-bottom: 5px;
		border: 0;
		}

		.userImg {
		width: 94px;
		margin: 3px 0px 0px 3px
		}

		.label {
		padding-left: 3px;
		width: 130px;
		}

		.refFlag {
		height: 30px;
		width: 65px;
		border: 1px solid #000;
		position: absolute;
		right: 0;
		padding-left: 6px;
		padding-top: 3px;
		color: #fff;
		}

		.refRepBtn {
		position: absolute;
		right: 0;
		bottom: 0;
		margin-bottom: 3px;
		}

	</ui:style>
	<g:HTMLPanel>
		<b:Row>
			<b:Column size="MD_4">
				<g:Image ui:field="avatarImg" width="100px" height="100px"/>
				<b:Row>
					<b:Column size="MD_12">
						<b:Badge ui:field="userName" addStyleNames="snipListRowBadge">
							<b:Icon type="USER" addStyleNames="leftIcon"/>
						</b:Badge>
					</b:Column>
				</b:Row>
				<b:Row>
					<b:Column size="MD_12">
						<b:Badge ui:field="rep" addStyleNames="snipListRowBadge">
							<b:Icon type="THUMBS_UP" addStyleNames="rightIcon"/>
						</b:Badge>
					</b:Column>
				</b:Row>
				<b:Row>
					<b:Column size="MD_12">
						<b:Badge ui:field="creationDate" addStyleNames="snipListRowBadge"/>
					</b:Column>
				</b:Row>
			</b:Column>
			<b:Column size="MD_8">
				<g:FlowPanel ui:field="emoListPanel" addStyleNames="col-lg-12"/>
				<g:FlowPanel ui:field="rightPanel" styleName="{style.rightPanel}">
					<g:Label ui:field="refFlag" styleName="{style.refFlag}"></g:Label>
					<b:Button type="PRIMARY" icon="THUMBS_UP" ui:field="refRepBtn" addStyleNames="{style.refRepBtn}"/>
					<g:HTMLPanel ui:field="richTextAreaRef" styleName="{style.richTextArea}"/>
				</g:FlowPanel>
			</b:Column>
		</b:Row>
	</g:HTMLPanel>
</ui:UiBinder>