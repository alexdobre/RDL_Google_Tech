<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>
    <b:Container>
        <b:Modal closable="true" fade="true" dataBackdrop="STATIC" dataKeyboard="true"
                 b:id="rdlSupporterModal" ui:field="rdlSupporterModal">
            <b:ModalBody ui:field="modalBody">

            </b:ModalBody>
            <b:ModalFooter>
                <b:Row>
                    <b:Column size="MD_6">
                        <g:Anchor ui:field="ancSupporter" text="{i18n.becomeRdlSupporter}" />
                    </b:Column>
                    <b:Column size="MD_6">
                        <b:InputGroup>
                            <b:InputGroupButton>
                                <b:RadioButton name="cryp" ui:field="radButUsd" text="USD"></b:RadioButton>
                                <b:RadioButton name="cryp" ui:field="radButGbp" text="GBP"></b:RadioButton>
                                <b:RadioButton name="cryp" ui:field="radButEur" text="EUR"></b:RadioButton>
                            </b:InputGroupButton>
                        </b:InputGroup>
                    </b:Column>
                </b:Row>
            </b:ModalFooter>
        </b:Modal>
    </b:Container>
</ui:UiBinder>