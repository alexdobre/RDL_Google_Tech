<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>
	<ui:style>
        .labelText  {
            font-family: Arial, Sans-serif;
            display:inline-block;
            font-size: 14px;
            text-align: left;
            /*  margin:10px;    */
        }

        .textField {
            border: 1px solid #AACCEE;
            display:inline-block;
            font-size:10px;
            padding: 3px;
            width: 160px;
            margin:5px;
        }

        .dateField {
            width: 70px;
            border: 1px solid #AACCEE;
            display:inline-block;
            font-size:10px;
            padding: 3px;
            margin:5px;
        }

        .posRef {
            width: 45px;
            border: 2px solid #758211;
            font-size:10px;
            padding: 3px;
            margin-left:5px;
        }

        .neutralRef {
            width: 45px;
            border: 2px solid #a7a77c;
            font-size:10px;
            padding: 3px;
            margin-left:5px;
        }

        .negativeRef {
            width: 45px;
            border: 2px solid #920E05;
            font-size:10px;
            padding: 3px;
            margin-left:5px;
        }


        .categoryField {
            width: 160px;
            margin:5px;
        }

        .submitPanel {
            display:block;
            width:350px !important;
            height:270px !important;
        }


        .submit {
            border: 1px solid #AACCEE;
            display:inline-block;
            font-size:11px;
            padding: 3px;
            width: 70px;
            margin:5px;
        }

        .getLinkButton {
            margin-left: 5px;
        }

        @external .getLinkPopup;
        .getLinkPopup {
            margin:0;
        }

	</ui:style>

    <g:VerticalPanel>

        <g:HTMLPanel styleName = '{style.submitPanel}' ui:field="container">
            <table>
                <tr>
                    <td><g:Label text = "{i18n.filter}" styleName = '{style.labelText}' /></td>
                    <td><g:Button ui:field="getLinkBtn" text="{i18n.link}" styleName="{style.getLinkButton}"/></td>
                </tr>
                <tr>
                    <td><g:Label text="{i18n.title}" styleName = '{style.labelText}'/></td>
                    <td>
                        <g:TextBox ui:field = "title" styleName = '{style.textField}'></g:TextBox>
                    </td>
                </tr>

                <tr>
                    <td><g:Label text="{i18n.category}" styleName = '{style.labelText}'/></td>
                    <td>
                        <g:ListBox ui:field = "categoryList" styleName = '{style.categoryField}'></g:ListBox>
                    </td>
                </tr>

                <tr>
                    <td><g:Label text="{i18n.subcategory}" styleName = '{style.labelText}'/></td>
                    <td>
                        <g:ListBox ui:field = "subCategoryList" styleName = '{style.categoryField}'></g:ListBox>
                    </td>
                </tr>

                <tr>
                    <td><g:Label text="{i18n.ref}" styleName = '{style.labelText}'/></td>
                    <td>
                        <g:TextBox ui:field = "posRef" styleName = '{style.posRef}'></g:TextBox>
                        <g:TextBox ui:field = "neutralRef" styleName = '{style.neutralRef}'></g:TextBox>
                        <g:TextBox ui:field = "negativeRef" styleName = '{style.negativeRef}'></g:TextBox>
                    </td>
                </tr>

                <tr>
                    <td><g:Label text="{i18n.reputation}" styleName = '{style.labelText}'/></td>
                    <td><g:TextBox ui:field = "snipRep" styleName = '{style.textField}'></g:TextBox></td>
                </tr>

                <tr>
                    <td><g:Label text="{i18n.content}" styleName = '{style.labelText}'/></td>
                    <td><g:TextBox ui:field = "content" styleName = '{style.textField}'></g:TextBox></td>
                </tr>

                <tr>
                    <td><g:Label text="{i18n.author}" styleName = '{style.labelText}'/></td>
                    <td><g:TextBox ui:field = "author" styleName = '{style.textField}'></g:TextBox></td>
                </tr>

                <tr>
                    <td><g:Label text="{i18n.date}" styleName = '{style.labelText}'/></td>
                    <td>
                        <g:TextBox ui:field = "dateFrom" styleName = '{style.dateField}'></g:TextBox>
                        <g:TextBox ui:field = "dateTo" styleName = '{style.dateField}'></g:TextBox>
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        <g:Button ui:field = "submit" text = "{i18n.search}" styleName ='{style.submit}'> </g:Button>
                        <g:Button ui:field="createNewButton" text="{i18n.createNew}" styleName='{style.submit}'  />
                    </td>
                </tr>

            </table>

        </g:HTMLPanel>

    </g:VerticalPanel>
</ui:UiBinder> 