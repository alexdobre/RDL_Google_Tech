<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:rdl="urn:import:com.therdl.client.view.widget"
        >
    <ui:with field="res" type="com.therdl.client.view.cssbundles.Resources"/>
    <ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>
    <ui:style>
        .labelText {
            font-family: Arial, Sans-serif;
            display: inline-block;
            font-size: 14px;
            text-align: left;
            width: 84px;
            /*  margin:10px;    */
        }

        .textField {
            border: 1px solid #AACCEE;
            display: inline-block;
            font-size: 10px;
            padding: 3px;
            width: 150px;
            margin: 5px;
            float: left;
        }

        .posRef {
            width: 30px;
            border: 2px solid #758211;
            font-size: 10px;
            padding: 3px;
            margin-left: 5px;
        }

        .neutralRef {
            width: 30px;
            border: 2px solid #a7a77c;
            font-size: 10px;
            padding: 3px;
            margin-left: 5px;
        }

        .negativeRef {
            width: 30px;
            border: 2px solid #920E05;
            font-size: 10px;
            padding: 3px;
            margin-left: 5px;
        }

        .categoryField {
            width: 160px;
            margin: 5px;
        }

        @external .getLinkPopup;
        .getLinkPopup {
            margin: 0;
        }

        @external .arrowImg;
        .arrowImg {
            display: block;
        }

        @external .arrowParent;
        .arrowParent {
            margin-top: 5px;
        }

        @external .checkBoxBtn;
        .checkBoxBtn {
            margin-left: 13px;
            display: inline-block;
        }

        .checkBoxBtn label {
            margin-left: 3px;
            margin-bottom: 0px;
            display: inline-block;
        }

        .dateFilterWidget {
            float: left;
        }

	    .displayNone {
	        display: none;
	    }

    </ui:style>

	<g:HTMLPanel>


		<b:Form type="HORIZONTAL">
		    <b:FieldSet>
			     <b:Legend ui:field="filterLabel" />

		        <b:FormGroup>
			        <b:FormLabel for="searchTitle" addStyleNames="col-lg-3" text="{i18n.title}"/>
			        <g:FlowPanel addStyleNames="col-lg-9">
				        <b:TextBox ui:field="title" b:id="searchTitle"/>
			        </g:FlowPanel>
		        </b:FormGroup>

			    <b:FormGroup ui:field="typeFormGroup">
				    <b:FormLabel addStyleNames="col-lg-3" text="{i18n.type}" />
				    <g:FlowPanel addStyleNames="col-lg-9" ui:field="typePanel"/>
			    </b:FormGroup>

			    <b:FormGroup ui:field="proposalTypeFormGroup">
				    <b:FormLabel addStyleNames="col-lg-3" text="{i18n.type}"/>
				    <g:FlowPanel addStyleNames="col-lg-9">
				        <g:ListBox ui:field="proposalTypeList" multipleSelect="true" addStyleNames="col-lg-8"/>
				    </g:FlowPanel>
			    </b:FormGroup>

			    <b:FormGroup ui:field="proposalStateFormGroup">
				    <b:FormLabel addStyleNames="col-lg-3" text="{i18n.state}"/>
				    <g:FlowPanel addStyleNames="col-lg-9">
					    <g:ListBox ui:field="proposalStateList" multipleSelect="true" addStyleNames="col-lg-8"/>
				    </g:FlowPanel>
			    </b:FormGroup>

			    <b:FormGroup ui:field="categoryFormGroup">
				    <b:FormLabel addStyleNames="col-lg-3" text="{i18n.category}"/>
				    <g:FlowPanel addStyleNames="col-lg-9">
					    <g:ListBox ui:field="categoryList" multipleSelect="true" addStyleNames="col-lg-10"/>
				    </g:FlowPanel>
			    </b:FormGroup>

			    <b:FormGroup ui:field="pledgesFormGroup">
				    <b:FormLabel for="searchPledges" addStyleNames="col-lg-3" text="{i18n.pledges}"/>
				    <g:HorizontalPanel addStyleNames="col-lg-6" ui:field="pledgesPanel">
					    <b:TextBox ui:field="pledgesCount" b:id="searchPledges"/>
				    </g:HorizontalPanel>
			    </b:FormGroup>

			    <b:FormGroup ui:field="countersFormGroup">
				    <b:FormLabel for="searchCounters" addStyleNames="col-lg-3" text="{i18n.counters}"/>
				    <g:HorizontalPanel addStyleNames="col-lg-6" ui:field="countersPanel">
					    <b:TextBox ui:field="countersCount" b:id="searchCounters"/>
				    </g:HorizontalPanel>
			    </b:FormGroup>

			    <b:FormGroup ui:field="refFormGroup">
				    <b:FormLabel for="searchCounters" addStyleNames="col-lg-3" text="{i18n.ref}"/>
				    <g:HorizontalPanel addStyleNames="col-lg-6" ui:field="refPanel">
					    <g:HorizontalPanel ui:field="posRefPanel">
						    <b:TextBox ui:field="posRef" styleName='{style.posRef}'/>
					    </g:HorizontalPanel>

					    <g:HorizontalPanel ui:field="neutralRefPanel">
						    <b:TextBox ui:field="neutralRef" styleName='{style.neutralRef}'/>
					    </g:HorizontalPanel>

					    <g:HorizontalPanel ui:field="negativeRefPanel">
						    <b:TextBox ui:field="negativeRef" styleName='{style.negativeRef}'/>
					    </g:HorizontalPanel>
				    </g:HorizontalPanel>
			    </b:FormGroup>

			    <b:Button ui:field="getLinkBtn" text="{i18n.link}"/>
		    </b:FieldSet>
		</b:Form>

            <table>

                <tr>
                    <td>
                        <g:Label ui:field="postLabel" text="{i18n.posts}" styleName='{style.labelText}'/>
                    </td>
                    <td>
                        <g:FlowPanel ui:field="postPanel">
                            <g:TextBox ui:field="postCount" styleName='{style.textField}'/>
                        </g:FlowPanel>
                    </td>
                </tr>

                <tr>
                    <td>
                        <g:Label ui:field="viewsLabel" text="{i18n.views}" styleName='{style.labelText}'/>
                    </td>
                    <td>
                        <g:FlowPanel ui:field="viewPanel">
                            <g:TextBox ui:field="viewCount" styleName='{style.textField}'/>
                        </g:FlowPanel>
                    </td>
                </tr>

                <tr>
                    <td>
                        <g:Label text="{i18n.reputation}" styleName='{style.labelText}'/>
                    </td>
                    <td>
                        <g:FlowPanel ui:field="repPanel">
                            <g:TextBox ui:field="snipRep" styleName='{style.textField}'></g:TextBox>
                        </g:FlowPanel>
                    </td>
                </tr>

                <tr>
                    <td>
                        <g:Label ui:field="contentLabel" text="{i18n.content}" styleName='{style.labelText}'/>
                    </td>
                    <td>
                        <g:TextBox ui:field="content" styleName='{style.textField}'></g:TextBox>
                    </td>
                </tr>

                <tr>
                    <td>
                        <g:Label text="{i18n.author}" styleName='{style.labelText}'/>
                    </td>
                    <td>
                        <g:FlowPanel ui:field="authorPanel">
                            <g:TextBox ui:field="author" styleName='{style.textField}'/>
                        </g:FlowPanel>
                    </td>
                </tr>

                <tr>
                    <td>
                        <g:Label text="{i18n.date}" styleName='{style.labelText}'/>
                    </td>
                    <td>
                        <g:FlowPanel ui:field="datePanel">
                            <rdl:DateFilterWidget ui:field="dateFilterWidget" styleName="{style.dateFilterWidget}"/>
                        </g:FlowPanel>
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        <b:Button ui:field="submit" text="{i18n.filter}"/>
                        <b:Button ui:field="createNewButton" text="{i18n.createNew}"/>
                    </td>
                </tr>

            </table>

	</g:HTMLPanel>
</ui:UiBinder> 