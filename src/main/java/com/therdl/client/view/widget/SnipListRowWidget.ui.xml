<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

        .main table {
        width: 98%;
        margin: 0 auto;
        }


        .title {
        font-weight: bold;
        font-size: 15px;
        color:blue;
        }

        .message {
        line-height: 18px;
        margin: 0 0 18px;
        padding: 0;
        }
        .description {
        line-height: 18px;
        margin: 0 0 18px;
        padding: 0;
        }


	</ui:style>
	<g:HTMLPanel  addStyleNames="{style.main}">
        <div foo="">
            <table>
                <tr>
                    <td>
                        <span ui:field="title" class="{style.title}"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <span ui:field="servermessage" class="{style.message}"></span>
                    </td>
                </tr>
                <tr>
                    <td rowspan="3" >
                        <span ui:field="content" class="{style.description}"></span>
                    </td>
                </tr>
            </table>
        </div>
	</g:HTMLPanel>
</ui:UiBinder> 