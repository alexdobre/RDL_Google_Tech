<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>

        .main table {
        width: 98%;
        height:100%;
        margin: 0 auto;
        }


        .title {
        font-weight: bold;
        font-size: 15px;
        color:blue;
        }

        .message {
        line-height: 18px;
        margin: 0 0 18px;
        padding: 0;
        }
        .description {
        line-height: 18px;
        margin: 0 0 18px;
        padding: 0;
        }

        .contentAsHtml {
        display:block;
        line-height: 18px;
        margin:20px;
        padding:10px;
        }


    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <div foo="">
            <table>
                <tr>
                    <td>
                        <span ui:field="title" class="{style.title}"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <span ui:field="author" class="{style.message}"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <span ui:field="id" class="{style.message}"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <span ui:field="stream" class="{style.message}"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <span ui:field="servermessage" class="{style.message}"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <span ui:field="timeStamp" class="{style.message}"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <span ui:field="contentAsString" class="{style.description}"></span>
                    </td>
                </tr>
                <hr/>
                <br/>
                <tr>
                    <td>
                        <span ui:field="contentAsHtml" class="{style.contentAsHtml}"></span>
                    </td>
                </tr>
            </table>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 