<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
		<g:DockPanel ui:field="snipListRow" width="100%">
			<g:Dock direction="WEST">
				<g:SimplePanel ui:field="snipRowRating">
					<g:Label text="Rating" width="10px" height="100%" ui:field="rating"/>
				</g:SimplePanel>
			</g:Dock>
			<g:Dock direction="NORTH">
				<g:HorizontalPanel>
					<g:Label text="Title lots of text here as the title can be very long" ui:field="title"/>
					<g:Label text="Author name" ui:field="author"/>
					<g:Label text="Rep" ui:field="authorRep"/>
				</g:HorizontalPanel>
			</g:Dock>
			<g:Dock direction="SOUTH">
				<g:SimplePanel>
					<g:Label text="Content here - even more text going on into the distance till we have run out of space and put in dots ..." width="100%" height="100%" ui:field="content"/>
				</g:SimplePanel>
			</g:Dock>
		</g:DockPanel>
	</g:HTMLPanel>
</ui:UiBinder> 