<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:rdl="urn:import:com.therdl.client.view.widget">
    <ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>
    <ui:style>
        .labelText  {
            font-family: Arial, Sans-serif;
            display:inline-block;
            font-size: 14px;
            text-align: left;
            /*  margin:10px;    */
        }

        .textField {
            width: 160px;
        }

        .refPanel, .dateFilterWidget {
            float: left;
        }

        .proposalCheckboxPanel {
            width: 170px;
            margin-left: 80px;
        }

        @external .arrowImg;
        .arrowImg {
            display: block;
        }

    </ui:style>
    <g:HTMLPanel>
        <table>
            <tr>
                <td colspan="2"><g:Label text = "{i18n.filterReferences}" styleName = '{style.labelText}' ui:field="filterLabel"/></td>
            </tr>
            <tr>
                <td><g:Label text = "{i18n.type}" styleName = '{style.labelText}' ui:field="typeLabel"/></td>
                <td><g:FlowPanel ui:field="refTypePanel"></g:FlowPanel></td>
            </tr>
            <tr>
                <td><g:Label text = "{i18n.authorRep}" styleName = '{style.labelText}' /></td>
                <td>
                    <g:FlowPanel ui:field="authorRepPanel" styleName="{style.refPanel}">
                        <g:TextBox ui:field="authorRep" styleName="{style.textField}"></g:TextBox>
                    </g:FlowPanel>
                </td>
            </tr>
            <tr>
                <td><g:Label text = "{i18n.authorName}" styleName = '{style.labelText}' /></td>
                <td>
                    <g:FlowPanel ui:field="authorNamePanel" styleName="{style.refPanel}">
                        <g:TextBox ui:field="authorName" styleName="{style.textField}"></g:TextBox>
                    </g:FlowPanel>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <g:FlowPanel ui:field="proposalCheckboxPanel" styleName="{style.proposalCheckboxPanel}">
                    </g:FlowPanel>
                </td>
            </tr>
            <tr>
                <td><g:Label text = "{i18n.date}" styleName = '{style.labelText}' /></td>
                <td>
                    <g:FlowPanel ui:field="datePanel" styleName="{style.refPanel}">
                        <rdl:DateFilterWidget ui:field="dateFilterWidget" styleName="{style.dateFilterWidget}"/>
                    </g:FlowPanel>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <b:Button ui:field="refFilter" text = "{i18n.filter}" />
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>