<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:dt='urn:import:com.therdl.client.view.widget.editor'>
  <ui:style  src="../RDLStyle.css">  
    .dialog {
    	background: white;
    	border: thin solid #AAA;
    	padding: 5px;
    	-moz-box-shadow: 10px 10px 5px #888;
    	-moz-border-radius: 5px;
    	-webkit-box-shadow: 10px 10px 5px #888;
    	-webkit-border-radius: 5px;
    }
    
    .floatLeft {
    	float: left;
    }
  </ui:style>
  <g:DialogBox ui:field="dialog" modal="true" stylePrimaryName="{style.dialog}">
    <g:caption>Editing a snip...</g:caption>
    <g:HTMLPanel ui:field="contents">
      <dt:SnipEditor ui:field="snipEditor" />
      <hr />      
      <div class="{style.rightAlign}">
        <g:Button ui:field="cancel">Cancel</g:Button>
        <g:Button ui:field="save">Save</g:Button>
      </div>
    </g:HTMLPanel>
  </g:DialogBox>
</ui:UiBinder>