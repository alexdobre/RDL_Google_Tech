<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .container {

        }

        .labelText  {
        font-family: Arial, Sans-serif;
        display:inline-block;
        font-size: 14px;
        text-align: left;
      /*  margin:10px;    */
        }



        .textField {
            border: 1px solid #AACCEE;
            display:inline-block;
            font-size:10px;
            padding: 3px;
            width: 160px;
            margin:5px;
        }

        .dateField {
            width: 70px;
            border: 1px solid #AACCEE;
            display:inline-block;
            font-size:10px;
            padding: 3px;
            margin:5px;
        }

        .categoryField {
            width: 160px;
            margin:5px;
        }

        .submitPanel {
        display:block;
        width:350px !important;
        height:270px !important;
        }


        .submit {
        position:absolute;
        border: 1px solid #AACCEE;
        display:inline-block;
        font-size:11px;
        padding: 3px;
        width: 70px;
        margin:10px;
        }

    </ui:style>
    <g:VerticalPanel styleName = '{style.container}'>
        <g:Label text = "Select Search Options" styleName = '{style.labelText}' />

        <g:HTMLPanel   styleName = '{style.submitPanel}' ui:field="container">
            <table>
                <tr>
                    <td>Date</td>
                    <td>
                        <g:TextBox ui:field = "dateFrom" styleName = '{style.dateField}'></g:TextBox>
                        <g:TextBox ui:field = "dateTo" styleName = '{style.dateField}'></g:TextBox>
                    </td>
                </tr>

                <tr>
                    <td>Category</td>
                    <td>
                        <g:ListBox ui:field = "categoryList" styleName = '{style.categoryField}'></g:ListBox>
                    </td>
                </tr>

                <tr>
                    <td><g:Label  styleName = '{style.labelText}'>Page Size</g:Label></td>
                    <td><g:TextBox ui:field = "paging" styleName = '{style.textField}'></g:TextBox></td>
                </tr>

                <tr>
                    <td><g:Label  styleName = '{style.labelText}'>Content</g:Label></td>
                    <td><g:TextBox ui:field = "content" styleName = '{style.textField}'></g:TextBox></td>
                </tr>

                <tr>
                    <td><g:Label  styleName = '{style.labelText}'>Author</g:Label></td>
                    <td><g:TextBox ui:field = "author" styleName = '{style.textField}'></g:TextBox></td>
                </tr>

                <tr>
                    <td></td>
                    <td><g:Button ui:field = "submit" text = "Set Options" styleName ='{style.submit}'> </g:Button></td>
                </tr>

            </table>

        </g:HTMLPanel>

    </g:VerticalPanel>
</ui:UiBinder>