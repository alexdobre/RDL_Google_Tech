<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

        .main {
         margin-top: 5px;
         display:block;
        }


        .widgetlayout {
        margin:10px 0 0 10px;
        width:520px;
        height:30px;
        display:block;


        }

        .widgetParameters {

        display:inline-block;
        width:80px;
        height:18px;
        margin:10px 20px 0 0 ;
        font-size:10px;

        }

        .optionParameters {
        position:absolute;
        display:inline-block;
        left:360px;
        font-size:10px;
        }

        .leftLabel {
        display:inline-block;
        width:120px;
        height:20px;
        position:absolute;
        float:left;
        color:black;
        }


        .rightTextBox {
        display:inline-block;
        width:180px;
        height:20px;
        position:absolute;
        left:160px;

        }



        .buttonlayout {
         margin:10px 0 0 10px;
         width:520px;
         height:30px;
         display:block;

        }

	</ui:style>
	<g:HTMLPanel styleName="{style.main}">
		<g:HorizontalPanel styleName='{style.widgetlayout}'  >
			<g:Label text="Enter Search Text"  styleName='{style.leftLabel}'   />
			<g:TextBox ui:field="matchText"  styleName='{style.rightTextBox}'  />
            <g:Button ui:field="optionsButton" text="Select Search Options" styleName='{style.optionParameters}' />
		</g:HorizontalPanel>
		<g:HorizontalPanel styleName='{style.buttonlayout}'>
			<g:Button ui:field="searchButton" text="Search" styleName='{style.widgetParameters}'  />
			<g:Button ui:field="createNewButton" text="Create New" styleName='{style.widgetParameters}'  />
		</g:HorizontalPanel>

	</g:HTMLPanel>
</ui:UiBinder> 