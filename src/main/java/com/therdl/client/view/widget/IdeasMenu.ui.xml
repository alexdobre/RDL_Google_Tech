<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="com.therdl.client.view.cssbundles.Resources"/>

    <ui:style>
        .btn{
            color: #000 !important;
            display: inline-block;
            padding-left: 70px;
        }

        .ideasLabel {
            display: inline-block;
            font-size: 17px;
        }

        .ideasImg {
            width: 40px;
            height: 40px;
        }

    </ui:style>

    <g:HTMLPanel>
        <div align="center" style="padding-top:5px;">
            <g:FocusPanel ui:field = "snipBtn"  styleName = "{style.btn}">
                <g:Image ui:field="snipImg" url='{res.SnipImage.getSafeUri.asString}' width="40px" height="40px"/>
            </g:FocusPanel>
            <g:Label text = "Snip" styleName="{style.ideasLabel}"/>

            <g:FocusPanel ui:field = "fastCapBtn"  styleName = "{style.btn}">
                <g:Image ui:field="fastCapImg" url='{res.FastCapImage.getSafeUri.asString}' styleName="{style.ideasImg}"/>
            </g:FocusPanel>
            <g:Label text = "FastCap" styleName="{style.ideasLabel}"/>

            <g:FocusPanel ui:field = "materialBtn"  styleName = "{style.btn}">
                <g:Image ui:field="materialImg" url='{res.MaterialImage.getSafeUri.asString}' styleName="{style.ideasImg}"/>
            </g:FocusPanel>
            <g:Label text = "Material" styleName="{style.ideasLabel}"/>

            <g:FocusPanel ui:field = "habitBtn"  styleName = "{style.btn}">
                <g:Image ui:field="habitImg" url='{res.HabitImage.getSafeUri.asString}' styleName="{style.ideasImg}"/>
            </g:FocusPanel>
            <g:Label text = "Habit" styleName="{style.ideasLabel}"/>

            <span ui:field="hoverDiv" style="display: block;font-size: 14px;margin-top: 5px;height:20px;"></span>

        </div>
    </g:HTMLPanel>
</ui:UiBinder>