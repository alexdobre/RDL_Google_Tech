<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="com.therdl.client.view.cssbundles.Resources"/>
    <ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>
    <ui:style>
        .btn{
        color: #000 !important;
        display: inline-block;
        padding-left: 70px;
        }

        .storiesLabel {
        display: inline-block;
        font-size: 17px;
        }

        .storiesImg {
        width: 40px;
        height: 40px;
        }

    </ui:style>

    <g:HTMLPanel>
        <div align="center" style="padding-top:5px; width: 1024px; margin:auto;">
            <div style="float:left; margin-left: 85px; margin-top:6px; max-width:20%;">
                <b:Button ui:field="storiesVideoButton" >Load stories video</b:Button>
            </div>
            <g:FocusPanel ui:field = "streamBtn"  styleName = "{style.btn}">
                <g:Image ui:field="streamImg" url='{res.StreamImageGif.getSafeUri.asString}' width="40px" height="40px"/>
            </g:FocusPanel>
            <g:Label text = "{i18n.stream}" styleName="{style.storiesLabel}"/>

            <g:FocusPanel ui:field = "tagBtn"  styleName = "{style.btn}">
                <g:Image ui:field="tagImg" url='{res.TagImageGif.getSafeUri.asString}' styleName="{style.storiesImg}"/>
            </g:FocusPanel>
            <g:Label text = "{i18n.tag}" styleName="{style.storiesLabel}"/>

            <g:FocusPanel ui:field = "threadBtn"  styleName = "{style.btn}">
                <g:Image ui:field="materialImg" url='{res.ThreadImageGif.getSafeUri.asString}' styleName="{style.storiesImg}"/>
            </g:FocusPanel>
            <g:Label text = "{i18n.thread}" styleName="{style.storiesLabel}"/>

            <g:FocusPanel ui:field = "postBtn"  styleName = "{style.btn}">
                <g:Image ui:field="postImg" url='{res.PostImageGif.getSafeUri.asString}' styleName="{style.storiesImg}"/>
            </g:FocusPanel>
            <g:Label text = "{i18n.post}" styleName="{style.storiesLabel}"/>

            <span ui:field="hoverDiv" style="display: block;font-size: 14px;margin-top: 5px;height:20px;"></span>

        </div>
    </g:HTMLPanel>
</ui:UiBinder>