<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
        >
    <ui:with field="res" type="com.therdl.client.view.cssbundles.Resources"/>
    <ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>

    <ui:style>
        .colorStripe {
            height: 5px;
        }

        .listRow .snipImgParent {
            float: left;
            width: 40px;
        }

        .label {
            padding-left: 0px;
        }

        .secondColDiv {
            margin: 0 20px 2px 20px;
            float: left;
        }

        .buttonPanel {
            float: left;
            margin-top: 30px;
            margin-left: 20px;
            display: none;
        }

        .editBtnParent {
            margin-top: 5px;
            display: none;
        }

        .titleLink {
            cursor: pointer;
        }

	    .badgeFont{
	        font-size: 1.2em;
	    }
	    .leftIcon{
	        float: left;
	        padding-right: 3px;
	    }
	    .rightIcon{
	        padding-left: 3px;
	    }
	    .snipTitle{
	        margin-top: 0px;
	        margin-bottom: 2px;
	    }
    </ui:style>

    <g:HTMLPanel ui:field="rootPanel">
        <div style="border: solid 1px #333;font-size: 12px;margin-top: 5px;border-top: none;">
            <g:FlowPanel ui:field="colorStripe" styleName="{style.colorStripe}"></g:FlowPanel>
            <div style="padding: 5px;height:80px;">
                <div style="margin-left: 5px;float: left;">
                    <div>
                        <div style="margin-right: 5px;float: left;">
                            <g:FlowPanel ui:field="snipImgParent" styleName="{style.snipImgParent}" width="40px" addStyleNames="img-circle">
                                <g:Image ui:field="snipImg" width="40px"/>
                            </g:FlowPanel>
	                        <b:Badge ui:field="rep" addStyleNames="{style.badgeFont}">
		                        <b:Icon type="THUMBS_UP" addStyleNames="{style.rightIcon}"/>
	                        </b:Badge>
                        </div>
                    </div>

                </div>
                <g:FlowPanel ui:field="secondColDiv" styleName="{style.secondColDiv}">

                </g:FlowPanel>

                <div style="float: left;margin-left: 3px;position:relative;width:450px;">
                    <div>
                        <div style="display: inline-block;">
	                        <b:Heading size="H4" ui:field="snipTitle" addStyleNames="{style.snipTitle}"/>
                        </div>
                    </div>

                    <div>
                        <div style="float:left;">
                            <b:Badge ui:field="userName" addStyleNames="{style.badgeFont}">
	                            <b:Icon type="USER" addStyleNames="{style.leftIcon}"/>
                            </b:Badge>
                        </div>
                        <div style="float:left;margin-left: 20px;">
                            <g:FlowPanel ui:field="refPanel">
                                <g:FlowPanel>
                                    <g:Label ui:field="posRef" styleName="{style.label}"/>
                                </g:FlowPanel>
                                <g:FlowPanel>
                                    <g:Label ui:field="neutRef" styleName="{style.label}"/>
                                </g:FlowPanel>
                                <g:FlowPanel>
                                    <g:Label ui:field="negRef" styleName="{style.label}"/>
                                </g:FlowPanel>
                            </g:FlowPanel>
                            <g:FlowPanel ui:field="postsPanel">
                                <g:FlowPanel>
	                                <b:Badge ui:field="postsCount" addStyleNames="{style.badgeFont}">
		                                <b:Icon type="COMMENT"/>
	                                </b:Badge>
                                </g:FlowPanel>
                            </g:FlowPanel>

                            <g:FlowPanel ui:field="pledgesPanel">
                                <g:FlowPanel>
                                    <g:Label ui:field="pledgesCount" styleName="{style.label}"/>
                                </g:FlowPanel>
                            </g:FlowPanel>

                        </div>
                        <div style="float:left;margin-left: 10px;">
                            <g:FlowPanel ui:field="countersPanel">
                                <g:FlowPanel>
                                    <g:Label ui:field="countersCount" styleName="{style.label}"/>
                                </g:FlowPanel>
                            </g:FlowPanel>
                        </div>
                        <div style="float:left;margin-left: 40px;">
                            <g:FlowPanel ui:field="viewPanel">
	                            <b:Badge ui:field="viewCount" addStyleNames="{style.badgeFont}">
		                            <b:Icon type="EYE"/>
	                            </b:Badge>
                            </g:FlowPanel>
                        </div>

                        <div style="float:left;margin-left: 15px;">
                            <div>
	                            <b:Badge ui:field="creationDate" addStyleNames="{style.badgeFont}"/>
                            </div>
                            <g:FlowPanel styleName="{style.editBtnParent}" ui:field="editBtnParent">
                                <b:Button ui:field="editBtn" text="{i18n.edit}"/>
                            </g:FlowPanel>
                        </div>

                    </div>

                    <div style="float:left;position:absolute;left:73%;top:0px;">
                        <g:FlowPanel ui:field="proposalPanel">
                            <g:Label ui:field="proposalType" styleName="{style.label}"/>
                            <g:Label ui:field="proposalState" styleName="{style.label}"/>
                        </g:FlowPanel>
                    </div>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>