<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             >
    <ui:with field="res" type="com.therdl.client.view.cssbundles.Resources"/>
    <ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>

    <ui:style>
        .colorStripe {
            height: 5px;
        }

        .listRow .snipImgParent {
            float: left;
            width: 40px;
        }

        .label {
            padding-left:0px;
        }

        .secondColDiv {
            margin: 0 10px 2px 20px;
            float: left;
        }
        .buttonPanel {
            float:left;
            margin-top:30px;
            margin-left:20px;
            display: none;
        }

        .editBtnParent {
            margin-top: 5px;
            display: none;
        }

    </ui:style>

    <g:HTMLPanel ui:field="rootPanel">
        <div style="border: solid 1px #333;font-size: 12px;margin-top: 5px;border-top: none;">
            <g:FlowPanel ui:field="colorStripe" styleName="{style.colorStripe}"></g:FlowPanel>
            <div style="padding: 5px;height:110px;">
                <div style="margin-left: 5px;float: left;">
                    <div>
                        <div style="margin-right: 5px;float: left;">
                            <g:FlowPanel ui:field="snipImgParent" styleName="{style.snipImgParent}" width="40px">
                                <g:Image ui:field="snipImg" width="40px"/>
                            </g:FlowPanel>
                            <g:Label ui:field="rep" styleName="{style.label}"/>
                            <g:Label text="{i18n.repLevel}"/>
                        </div>
                        <div style="float: left;">
                            <g:Image url='{res.avatarImage.getSafeUri.asString}' width="94px"></g:Image>
                        </div>
                    </div>
                    <g:Label ui:field="titleLabel" styleName="{style.label}"/>
                </div>
                <g:FlowPanel ui:field="secondColDiv" styleName="{style.secondColDiv}">

                </g:FlowPanel>

                <div style="float: left;margin-left: 3px;">
                    <div>
                        <div style="font-weight: bold;font-weight: 17px;margin-right: 5px;display: inline-block;">
                            <g:Label text="{i18n.title}"/>
                        </div>
                        <div style="display: inline-block;">
                            <g:Anchor ui:field="snipTitle" styleName="{style.label}"/>
                        </div>
                    </div>

                    <div style="margin-top: 10px;">
                        <div style="float:left;margin-left: 20px;">
                            <g:Label ui:field="userName" styleName="{style.label}"/>
                        </div>
                        <div style="float:left;margin-left: 50px;">
                            <div><g:Label ui:field="posRef" styleName="{style.label}"/></div>
                            <div><g:Label ui:field="neutRef" styleName="{style.label}"/></div>
                            <div><g:Label ui:field="negRef" styleName="{style.label}"/></div>
                        </div>
                        <div style="float:left;margin-left: 50px;">
                            <div><g:Label ui:field="viewCount" styleName="{style.label}"/></div>
                            <div><g:Label ui:field="creationDate" styleName="{style.label}"/></div>
                        </div>
                    </div>
                </div>
                <g:FlowPanel ui:field="buttonPanel" styleName="{style.buttonPanel}">
                    <g:FlowPanel>
                        <b:Button ui:field="viewBtn" text="{i18n.view}" />
                    </g:FlowPanel>
                    <g:FlowPanel styleName="{style.editBtnParent}" ui:field="editBtnParent">
                        <b:Button ui:field="editBtn" text="{i18n.edit}"/>
                    </g:FlowPanel>
                </g:FlowPanel>

            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>