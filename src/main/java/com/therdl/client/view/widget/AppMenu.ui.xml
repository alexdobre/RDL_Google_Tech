    <b:Navbar>
        <b:NavbarHeader>
            <b:NavbarBrand ui:field="home">TheRDL</b:NavbarBrand>
            <b:NavbarCollapseButton target="#navbar-collapse"/>
        </b:NavbarHeader>

        <b:NavbarCollapse b:id="navbar-collapse">
            <b:NavbarNav>
                <b:NavbarLink ui:field="ideas" text="{i18n.ideas}"></b:NavbarLink>
                <b:NavbarLink ui:field="stories" text="{i18n.stories}"></b:NavbarLink>
                <b:NavbarLink ui:field="improvements" text="{i18n.improvements}"></b:NavbarLink>
            </b:NavbarNav>

            <b:NavbarForm pull="LEFT">
                <b:TextBox ui:field = "searchSiteContent" placeholder="Search Site Content" addStyleNames="col-lg-8"/>
            </b:NavbarForm>

            <b:NavbarText ui:field = "user" pull="RIGHT">
                <b:ListDropDown>
                    <b:AnchorButton ui:field = "userdetails" toggle="DROPDOWN" text="{i18n.userDetails}"/>
                    <b:DropDownMenu>
                        <b:NavbarLink text="{i18n.email}" ui:field="email"/>
                        <b:NavbarLink text="{i18n.userProfile}" ui:field="profile"/>
                        <b:NavbarLink text="{i18n.logOut}" ui:field="out"/>
                    </b:DropDownMenu>
                </b:ListDropDown>
                <b:ListDropDown>
                    <b:DropDownMenu>
                        <b:NavbarLink  ui:field = "login" text="{i18n.logIn}"></b:NavbarLink>
                        <b:NavbarLink  ui:field = "signUp" text="{i18n.appMenuSignUp}"></b:NavbarLink>
                    </b:DropDownMenu>
                </b:ListDropDown>
            </b:NavbarText>
        </b:NavbarCollapse>
    </b:Navbar>

