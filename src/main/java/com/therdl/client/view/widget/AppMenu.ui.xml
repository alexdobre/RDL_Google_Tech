<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}



        .userDropDown {
        position:fixed;
        right:5%;
        }

	</ui:style>
	<g:HTMLPanel>
		<g:MenuBar ui:field="menuBar" >



			<g:MenuItem text="Ideas" ui:field = "ideas"/>
			<g:MenuItem text="Stories" ui:field = "stories"/>
			<g:MenuItem text="Improvements" ui:field = "improvements"/>
            <g:MenuItem text="Services" ui:field = "services"/>

            <g:MenuItem text="Sign Up for an Account" ui:field = "signUp"/>

            <g:MenuItem text="User" ui:field = "user"  styleName="{style.userDropDown}">
            <g:MenuBar vertical="true">
            <g:MenuItem text="log out" ui:field = "out"/>
            <g:MenuItem text="email" ui:field = "email"/>
            </g:MenuBar>
            </g:MenuItem>

		</g:MenuBar>		
	</g:HTMLPanel>
</ui:UiBinder> 