<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
        >
    <ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>

    <b:Navbar>
        <b:NavbarHeader>
            <b:NavbarBrand ui:field="home">TheRDL</b:NavbarBrand>
            <b:NavbarCollapseButton target="#navbar-collapse"/>
        </b:NavbarHeader>
        <b:NavbarCollapse b:id="navbar-collapse">
            <b:NavbarNav>
                <b:ListItem ui:field="ideas" text="{i18n.ideas}"/>
                <b:ListItem ui:field="stories" text="{i18n.stories}"/>
                <b:ListItem ui:field="improvements" text="{i18n.improvements}"/>
            </b:NavbarNav>

            <b:NavbarForm pull="LEFT">
                <b:TextBox ui:field="searchSiteContent" width="400px" placeholder="Search Site Content"
                           addStyleNames="col-lg-8"/>
            </b:NavbarForm>

            <b:NavbarNav pull="RIGHT">
                <b:ListItem ui:field="login" text="{i18n.logIn}"/>
                <b:ListItem ui:field="signUp" text="{i18n.appMenuSignUp}"/>
                <b:ListDropDown>
                    <b:Divider/>
                    <b:AnchorButton ui:field="userDetails" toggle="DROPDOWN" text="{i18n.userDetails}"></b:AnchorButton>
                    <b:DropDownMenu>
                        <b:NavbarHeader title="{i18n.userName}" ui:field="user"></b:NavbarHeader>
                        <b:ListItem text="{i18n.email}" ui:field="email"></b:ListItem>
                        <b:ListItem text="{i18n.userProfile}" ui:field="profile"></b:ListItem>
                        <b:ListItem text="{i18n.logOut}" ui:field="out"></b:ListItem>
                    </b:DropDownMenu>
                </b:ListDropDown>
            </b:NavbarNav>
        </b:NavbarCollapse>
    </b:Navbar>
</ui:UiBinder> 