<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">

	<ui:with field="res" type="com.therdl.client.view.cssbundles.Resources" />

	<ui:style>

		@external .imgSocial;
		.imgSocial {
		padding-left: 5px;
		}
		@external .fb-button;
		.fb-button {
			display: -moz-inline-block;
			display:inline-block;
			padding:1px 20px 0 5px;
			height:70px;
			width:60px;
			border:1px solid #d8dfea;
			background:url("images/facebook.img") no-repeat top right;
			text-decoration: none;
		}

	</ui:style>

	<g:HTMLPanel>
	   
		<div id="fb-root"></div>
		
	<g:FlowPanel ui:field="socialPanel"></g:FlowPanel>
	<b:ButtonGroup>
	 <b:Button ui:field="fbButton"/>
		<b:Button ui:field="twitterButton"/>
	
	</b:ButtonGroup>
		</g:HTMLPanel>

</ui:UiBinder>