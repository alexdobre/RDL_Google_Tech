<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:summer="urn:import:org.gwtbootstrap3.extras.summernote.client.ui"
             xmlns:rdl='urn:import:com.therdl.client.view.widget'>
    <ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>
    <ui:with field="res" type="com.therdl.client.view.cssbundles.Resources"/>
    <ui:with field="nameTokens" type="com.therdl.client.view.common.NameTokens"/>

    <b:Container addStyleNames="push">
        <g:SimplePanel ui:field="appMenuPanel"/>
        <b:Row addStyleNames="paddingBot20">
            <b:Column size="MD_2">
                <g:Image resource='{res.landingImage}'/>
                <rdl:SocialPanel ui:field="socialPanel"/>
            </b:Column>
            <b:Column size="MD_10" addStyleNames="paddingTop20">
                <b:Row>
                    <b:Column size="MD_12" addStyleNames="textCenter">
                        <b.html:Span text="{i18n.exploreTitle}" addStyleNames="explore-title"></b.html:Span>
                    </b:Column>
                    <b:Column size="MD_12" addStyleNames="paddingTop20 textCenter">
                        <b.html:Span text="{i18n.exploreSubTitle1}" addStyleNames="explore-title explore-sub-title"></b.html:Span>
                    </b:Column>
                    <b:Column size="MD_12" addStyleNames="paddingTop20 textCenter">
                        <b.html:Span text="{i18n.exploreSubTitle2}" addStyleNames="explore-title explore-sub-title"></b.html:Span>
                    </b:Column>
                </b:Row>
            </b:Column>
        </b:Row>

        <b:Row>
            <b:Column size="MD_5" offset="MD_2">
                <b:Button styleName="explore-link e1" ui:field="welcome" text="{i18n.explore1}"/>
            </b:Column>
            <b:Column size="MD_5">
                <b:Button styleName="explore-link e2" ui:field="license" text="{i18n.explore2}"/>
            </b:Column>
        </b:Row>

        <b:Row>
            <b:Column size="MD_5" offset="MD_2">
                <b:Button styleName="explore-link e3" ui:field="snips" text="{i18n.explore3}"/>
            </b:Column>
            <b:Column size="MD_5">
                <b:Button styleName="explore-link e4" ui:field="services" text="{i18n.explore4}"/>
            </b:Column>
        </b:Row>

        <b:Row>
            <b:Column size="MD_5" offset="MD_2">
                <b:Button styleName="explore-link e5" ui:field="supporter" text="{i18n.explore5}"/>
            </b:Column>
            <b:Column size="MD_5">
                <b:Button styleName="explore-link e6" ui:field="stories" text="{i18n.explore6}"/>
            </b:Column>
        </b:Row>

    </b:Container>

</ui:UiBinder>