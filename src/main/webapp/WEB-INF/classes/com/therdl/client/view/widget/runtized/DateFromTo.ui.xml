<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b2="urn:import:org.gwtbootstrap3.extras.datetimepicker.client.ui"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with field="res" type="com.therdl.client.view.cssbundles.Resources"/>
	<ui:with field='i18n' type='com.therdl.client.view.i18n.I18NConstants'/>

	<g:FlowPanel>
		<b2:DateTimePicker minView="MONTH" autoClose="true" position="TOP_RIGHT" placeholder="{i18n.dateFrom}"
		                   addStyleNames="dateFromInput" format="yyyy-mm-dd" ui:field="dateFrom"/>
		<b2:DateTimePicker minView="MONTH" autoClose="true" position="BOTTOM_RIGHT" placeholder="{i18n.dateTo}"
		                   addStyleNames="dateToInput" format="yyyy-mm-dd" ui:field="dateTo"/>
	</g:FlowPanel>

</ui:UiBinder>